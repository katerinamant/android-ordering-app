<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.Manager.Revenue.ManagerRevenueActivity">

    <TextView
        android:id="@+id/txt_manager_revenue_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/show_revenue"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_manager_revenue_choose_month"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/choose_month"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_choose_year" />

    <EditText
        android:id="@+id/edit_txt_mngr_revenue_month"
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@+id/txt_manager_revenue_choose_month"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_choose_year" />

    <TextView
        android:id="@+id/txt_manager_revenue_choose_year"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/choose_year"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_header" />

    <EditText
        android:id="@+id/edit_txt_mngr_revenue_year"
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@+id/txt_manager_revenue_choose_year"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_header" />

    <TextView
        android:id="@+id/txt_manager_revenue_monthly_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/monthly_total"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculate_revenue" />

    <TextView
        android:id="@+id/txt_manager_revenue_month_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/no_records"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/txt_manager_revenue_monthly_total"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculate_revenue" />

    <TextView
        android:id="@+id/txt_manager_revenue_choose_day"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/choose_day"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_choose_month" />

    <EditText
        android:id="@+id/edit_txt_mngr_revenue_day"
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/text"
        app:layout_constraintStart_toEndOf="@+id/txt_manager_revenue_choose_day"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_mngr_revenue_month" />

    <TextView
        android:id="@+id/txt_manager_revenue_daily_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/daily_total"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_monthly_total" />

    <TextView
        android:id="@+id/txt_manager_revenue_day_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/no_records"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/txt_manager_revenue_daily_total"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_month_output" />

    <Button
        android:id="@+id/btn_calculate_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_button"
        android:text="@string/calculate"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_manager_revenue_choose_day" />

</androidx.constraintlayout.widget.ConstraintLayout>
